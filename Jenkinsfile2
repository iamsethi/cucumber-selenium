pipeline {
    agent any
    stages {
        stage('Pull Latest Image') {
            steps {
                sh 'docker pull iamsethi/cucumber-selenium-docker'
            }
        }
        stage('Run Test') {
            steps {
                      
             parallel(
               "chrome-tests":{
                  sh 'docker run -e HUB_HOST=http://192.168.1.10:4444/wd/hub -e BROWSER=chrome  -e TAG=@regression -v ${WORKSPACE}/chrome:/usr/share/udemy/target iamsethi/cucumber-selenium-docker  org.junit.runner.JUnitCore com.amazon.runner.RunnerTest'

               },
               "firefox-tests":{
                  sh 'docker run -e HUB_HOST=http://192.168.1.10:4444/wd/hub -e BROWSER=firefox  -e TAG=@regression -v ${WORKSPACE}/firefox:/usr/share/udemy/target iamsethi/cucumber-selenium-docker  org.junit.runner.JUnitCore com.amazon.runner.RunnerTest'

               },
               "api-tests":{
                  sh 'docker run -e HUB_HOST=http://192.168.1.10:4444/wd/hub -e TAG=@api -v ${WORKSPACE}/firefox:/usr/share/udemy/target iamsethi/cucumber-selenium-docker  org.junit.runner.JUnitCore com.amazon.runner.RunnerTest'

               }      
                           
            ) 
        }
        }
       
        }
    post{
    always
    {
   	archiveArtifacts artifacts: 'chrome/**', fingerprint: true
   	archiveArtifacts artifacts: 'firefox/**', fingerprint: true
    }
    
    }
}